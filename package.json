{
  "name": "@movie-magic/movie-magic-rest-api",
  "description": "Movie Magic Rest API",
  "version": "0.0.1",
  "main": "dist/index.js",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "clean": "rimraf node_modules dist",
    "dev": "nodemon --watch src -e ts --exec ts-node src/index.ts",
    "lint": "run-s _lint _format",
    "lint:fix": "run-s _lint:fix _format:fix",
    "start": "node dist",
    "_format": "prettier --list-different README.md '**/*.{js,ts,json,md}'",
    "_format:fix": "npm run _format -- --write",
    "_lint": "eslint '**/*.{js,ts}'",
    "_lint:fix": "npm run _lint -- --fix"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@code-shaper/eslint-config": "^1.*",
    "@code-shaper/jest-config": "^1.*",
    "@code-shaper/typescript-config": "^1.*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}
